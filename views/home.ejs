<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
<main class="main-container">
    <h1 class="main-headline"><%= title %></h1>
    <form action="" method="" id="todo-form">
        <div class="form-box">
            <label for="todo-description">description</label>
            <input id="todo-description" type="text" name="description" placeholder="What do you mean to do?">
        </div>
        <div class="w-1/2">
            <div class="form-box form-category">
                <label for="todo-category">category</label>
                <select id="todo-category" name="category">
                    <option value="Choose Category" disabled>Choose Category</option>
                    <option value="Personal">Personal</option>
                    <option value="School">School</option>
                    <option value="Work">Work</option>
                    <option value="Cleaning">Cleaning</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="form-box">
                <label for="todo-date">due date</label>
                <input id="todo-date" name="date" type="date">
            </div>
        </div>
    </form>
    <div class="form-buttons-container">
        <button class="add-task-button" type="submit" form="todo-form"><i class="icon bi bi-plus-circle-fill"></i>add task
        </button>
        <button class="delete-task-button"><i class="icon bi bi-trash2-fill"></i>delete tasks</button>
    </div>
    <ul>
        <li class="todo-list-item">
            <div class="task-container">
                <div>
                    <input type="checkbox" name="" id="" class="task-checkbox">
                    <div>
                        <h6 class="task-description-headline">Annual report submission deadline</h6>
                        <p class="task-date-subtitle"><i class="icon bi bi-calendar"></i>Jun 1, 2019</p>
                    </div>
                </div>
                <span class="task-category-label">work</span>
            </div>
        </li>
    </ul>
</main>
<script src="/js/home.js" type="text/javascript" defer></script>
</body>
</html>